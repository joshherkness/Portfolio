<!-- layout.erb -->

<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>

    <!-- JQuery -->
    <%= javascript_include_tag :'vendor/jquery' %>

    <!-- Moment.js -->
    <%= javascript_include_tag :'vendor/moment' %>
    <%= javascript_include_tag :'vendor/moment-precise-range' %>

    <!-- Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Source+Code+Pro' rel='stylesheet' type='text/css'>

    <!-- Flexbox grid -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/flexboxgrid/6.3.0/flexboxgrid.min.css" type="text/css" >

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/4.0.0/imagesloaded.pkgd.min.js"></script>

    <%= stylesheet_link_tag :main %>
    <%= javascript_include_tag :main %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
